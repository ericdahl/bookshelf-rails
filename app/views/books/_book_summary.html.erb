<div class="col-span-3">
  <h3 class="font-medium truncate"><%= book.title %></h3>
</div>

<div class="col-span-2">
  <span class="text-gray-600 truncate"><%= book.author %></span>
</div>

<div class="col-span-2">
  <span class="text-gray-600 truncate"><%= book.series&.name || "-" %></span>
</div>

<div class="col-span-2">
  <span class="inline-flex items-center rounded-md bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
    <%= book.book_type&.titleize %>
  </span>
</div>

<div class="col-span-1">
  <% if book.rating %>
    <span class="inline-flex items-center rounded-md bg-yellow-50 px-1.5 py-0.5 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
      <%= book.rating %>/10
    </span>
  <% end %>
</div>

<div class="col-span-2 flex justify-end gap-2">
  <%= link_to "Show", book, class: "text-sm text-gray-600 hover:text-gray-900" %>
  <%= link_to "Edit", edit_book_path(book), class: "text-sm text-gray-600 hover:text-gray-900" %>
  <%= button_to "Delete", book, method: :delete, class: "text-sm text-red-600 hover:text-red-900", form_class: "inline", data: { turbo_stream: true } %>
</div> 