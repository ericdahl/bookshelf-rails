<% content_for :title, @author.name %>

<div class="container">
  <% if notice.present? %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <div class="author-card">
    <h1><%= @author.name %></h1>
    
    <div class="author-actions">
      <%= link_to "Edit author", edit_author_path(@author), class: "author-link" %>
      <%= link_to "Back to authors", authors_path, class: "back-link" %>
      <%= button_to "Delete author", @author, method: :delete, class: "submit-button", style: "background-color: #dc3545;", data: { confirm: "Are you sure you want to delete this author?" } %>
    </div>
  </div>
</div>
